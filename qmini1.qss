
/*QTreeView*/
QTreeView
{
    background-color: #3f3f3f;
    
}
/*-----QToolButton-----*/
QToolButton
{
	background-color: #3f3f3f;
    /* #00ff4f;*/
	color: #000000;
	font-weight: bold;
	border-style: solid;
	border-color: #000000;
	padding: 3px;

}


QToolButton::hover
{
	background-color: #f0dfaf;

}


QToolButton::pressed
{
	background-color: #DCA3A3;

}
