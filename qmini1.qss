}
/*-----QToolBar-----*/
QToolBar
{
	/* background-color: #262729; */
    background-color: #3f3f3f;
	color: #ffffff;
	border-color: #000000;

}
/*QMenu*/
QMenu {
    margin: 10px;  /*A bit of nice padding around menu items.*/
    background-color: #3f3f3f;
    color: #DCDCCC;
    /* border: 1px solid #DCDCCC; */
}

QMenu::item,
QMenuBar::item
{
    background-color: #3f3f3f;
    color: #DCDCCC;
}

QMenu::item:disabled,
QMenuBar::item:disabled
{
    color: #7F9F7F;
    font-style: italic;
}

QMenu::item:selected,
QMenuBar::item:selected
{
    color: #000;
    background-color: #DCA3A3;
}
